using System;

namespace For_loops_Break_Continue
{
    class Program
    {
        static void Main(string[] args)
        {
            string password; /// Define The Type of password
            for (int i=0; i<3; i++) /// For i repeat 3 times  0+1 0+2 0+3 stop
            {
                Console.Write("Enter Password : "); /// Enter Your password
                password = Console.ReadLine();      /// Get input from user
                {
                    if (password != ("1987"))       /// if pass isnt 1987 show message "pass wrong"
                    {
                        Console.WriteLine("Password Wrong");
                        continue; /// repeat request 3 times 
                        Console.ReadKey();
                    }
                }
                if (password.Equals  ("1987"))     /// if pass is 1987 show message "Access Granted"
                {
                    Console.WriteLine("Access Granted");
                    Console.ReadKey();
                    break;                        /// if conditiond is granted exit the For Loop
                  
                }
            }
        }
    }
}
